<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_meeting_room_name"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:textColor="@color/MainTextColor"
            android:text="会议室:106"/>

        <TextView
            android:id="@+id/tv_meeting_room_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_meeting_room_name"
            android:textColor="@color/MainTextColor"
            android:text="时间:2019-02-14 16:20-16:30"/>

        <TextView
            android:id="@+id/tv_meeting_room_remarks"
            android:layout_width="300dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_meeting_room_time"
            android:textColor="@color/MainTextColor"
            android:text="备注:106"/>

        <Button
            android:id="@+id/btn_delete_order"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_delete_button"
            android:textColor="@color/MainColor"
            android:textSize="16sp"
            android:text="删除"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
